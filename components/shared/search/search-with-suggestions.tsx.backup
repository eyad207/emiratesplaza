'use client'

import { useState, useEffect, useRef, useCallback } from 'react'
import { useRouter } from 'next/navigation'
import { Search, X, CheckCircle } from 'lucide-react'
import { Input } from '@/components/ui/input'
import { Button } from '@/components/ui/button'
import { Badge } from '@/components/ui/badge'
import { useTranslations } from 'next-intl'
import { createPortal } from 'react-dom'

interface SearchSuggestionsProps {
  locale?: 'ar' | 'en-US' | 'nb-NO'
  initialQuery?: string
  className?: string
  placeholder?: string
  buttonClassName?: string
  iconClassName?: string
  compact?: boolean
  showSpellCheck?: boolean
  debounceMs?: number
}

interface SpellCheckResult {
  isLikelyMisspelled: boolean
  suggestions: string[]
  correctedQuery?: string
}

export default function SearchWithSuggestions({
  locale, // Will be auto-detected if not provided
  initialQuery = '',
  className = '',
  placeholder,
  buttonClassName,
  iconClassName,
  compact = false,
  showSpellCheck = true,
  debounceMs = 150, // Faster for header
}: SearchSuggestionsProps) {  const [query, setQuery] = useState(initialQuery)
  const [suggestions, setSuggestions] = useState<string[]>([])
  const [spellCheck, setSpellCheck] = useState<SpellCheckResult | null>(null)
  const [showSuggestions, setShowSuggestions] = useState(false)
  const [isLoading, setIsLoading] = useState(false)
  const [selectedIndex, setSelectedIndex] = useState(-1)
  const [dropdownPosition, setDropdownPosition] = useState({ top: 0, left: 0, width: 0 })
  const [isMounted, setIsMounted] = useState(false)

  const inputRef = useRef<HTMLInputElement>(null)
  const suggestionsRef = useRef<HTMLDivElement>(null)
  const router = useRouter()
  const t = useTranslations()
  // Auto-detect locale from URL if not provided
  const detectedLocale = locale || (typeof window !== 'undefined' 
    ? (window.location.pathname.split('/')[1] as 'ar' | 'en-US' | 'nb-NO') || 'en-US'
    : 'en-US')

  // Mount effect for client-side rendering
  useEffect(() => {
    setIsMounted(true)
  }, [])

  // Calculate dropdown position for compact mode (portal positioning)
  const updateDropdownPosition = useCallback(() => {
    if (compact && inputRef.current) {
      const rect = inputRef.current.getBoundingClientRect()
      setDropdownPosition({
        top: rect.bottom + window.scrollY + 4,
        left: rect.left + window.scrollX,
        width: rect.width
      })
    }
  }, [compact])  // Debounced suggestions fetch
  useEffect(() => {
    const timeoutId = setTimeout(async () => {
      if (query.length >= 2) {
        setIsLoading(true)
        try {
          const response = await fetch(
            `/api/search-suggestions?q=${encodeURIComponent(query)}&locale=${detectedLocale}&limit=5`
          )
          const data = await response.json()
          setSuggestions(data.suggestions || [])
          if (showSpellCheck) {
            setSpellCheck(data.spellCheck)
          }
          setShowSuggestions(true)
          updateDropdownPosition() // Update position when showing suggestions
        } catch (error) {
          console.error('Failed to fetch suggestions:', error)
        } finally {
          setIsLoading(false)
        }
      } else {
        setSuggestions([])
        setSpellCheck(null)
        setShowSuggestions(false)      }
    }, debounceMs)

    return () => clearTimeout(timeoutId)
  }, [query, detectedLocale, showSpellCheck, debounceMs, updateDropdownPosition])

  // Update dropdown position on window resize/scroll for compact mode
  useEffect(() => {
    if (compact && showSuggestions) {
      const handleResize = () => updateDropdownPosition()
      const handleScroll = () => updateDropdownPosition()
      
      window.addEventListener('resize', handleResize)
      window.addEventListener('scroll', handleScroll)
      
      return () => {
        window.removeEventListener('resize', handleResize)
        window.removeEventListener('scroll', handleScroll)
      }
    }
  }, [compact, showSuggestions, updateDropdownPosition])

  const handleSearch = useCallback(() => {
    if (query.trim()) {
      const searchUrl = `/search?q=${encodeURIComponent(query.trim())}`
      router.push(searchUrl)
      setShowSuggestions(false)
    }
  }, [query, router])

  const handleSuggestionClick = useCallback(
    (suggestion: string) => {
      setQuery(suggestion)
      setShowSuggestions(false)
      const searchUrl = `/search?q=${encodeURIComponent(suggestion)}`
      router.push(searchUrl)
    },
    [router]
  )

  // Handle keyboard navigation
  useEffect(() => {
    const handleKeyDown = (e: KeyboardEvent) => {
      if (!showSuggestions) return

      switch (e.key) {
        case 'ArrowDown':
          e.preventDefault()
          setSelectedIndex((prev) =>
            prev < suggestions.length - 1 ? prev + 1 : prev
          )
          break
        case 'ArrowUp':
          e.preventDefault()
          setSelectedIndex((prev) => (prev > -1 ? prev - 1 : -1))
          break
        case 'Enter':
          e.preventDefault()
          if (selectedIndex >= 0 && suggestions[selectedIndex]) {
            handleSuggestionClick(suggestions[selectedIndex])
          } else {
            handleSearch()
          }
          break
        case 'Escape':
          setShowSuggestions(false)
          setSelectedIndex(-1)
          break
      }
    }

    const currentInput = inputRef.current
    if (currentInput) {
      currentInput.addEventListener('keydown', handleKeyDown)
      return () => {
        currentInput.removeEventListener('keydown', handleKeyDown)
      }
    }
  }, [
    showSuggestions,
    selectedIndex,
    suggestions,
    handleSearch,
    handleSuggestionClick,
  ])

  // Close suggestions when clicking outside
  useEffect(() => {
    const handleClickOutside = (event: MouseEvent) => {
      if (
        suggestionsRef.current &&
        !suggestionsRef.current.contains(event.target as Node) &&
        !inputRef.current?.contains(event.target as Node)
      ) {
        setShowSuggestions(false)
        setSelectedIndex(-1)
      }
    }

    document.addEventListener('mousedown', handleClickOutside)
    return () => document.removeEventListener('mousedown', handleClickOutside)
  }, [])

  const handleSpellCorrection = () => {
    if (spellCheck?.correctedQuery) {
      setQuery(spellCheck.correctedQuery)
      const searchUrl = `/search?q=${encodeURIComponent(spellCheck.correctedQuery)}`
      router.push(searchUrl)
    }
  }

  const clearSearch = () => {
    setQuery('')
    setSuggestions([])
    setSpellCheck(null)
    setShowSuggestions(false)
    inputRef.current?.focus()
  }

  return (
    <div className={`relative w-full ${compact ? '' : 'max-w-2xl'} ${compact ? className : ''}`}>
      {/* Main search input */}
      <div className={`relative ${compact ? 'flex items-stretch' : ''}`}>
        {!compact && (
          <Search className='absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 h-4 w-4 z-10' />
        )}
        <Input
          ref={inputRef}
          type='text'
          placeholder={placeholder || t('Search.Search for products')}
          value={query}
          onChange={(e) => setQuery(e.target.value)}          onFocus={() => {
            if (suggestions.length > 0) {
              setShowSuggestions(true)
              updateDropdownPosition()
            }
          }}
          className={
            compact
              ? className
              : 'pl-10 pr-12 py-3 text-lg border-2 border-gray-200 rounded-xl focus:border-blue-500 focus:ring-0 transition-colors'
          }
          onKeyDown={(e) => {
            if (e.key === 'Enter' && selectedIndex === -1) {
              e.preventDefault()
              handleSearch()
            }
          }}
        />
        {compact && buttonClassName && (
          <button
            type='button'
            onClick={handleSearch}
            className={buttonClassName}
            aria-label={t('Header.Search')}
          >
            <Search className={iconClassName || 'w-4 h-4'} />
          </button>
        )}
        {!compact && query && (
          <Button
            variant='ghost'
            size='sm'
            onClick={clearSearch}
            className='absolute right-2 top-1/2 transform -translate-y-1/2 h-8 w-8 p-0 hover:bg-gray-100'
          >
            <X className='h-4 w-4' />
          </Button>
        )}
        {!compact && isLoading && (
          <div className='absolute right-12 top-1/2 transform -translate-y-1/2'>
            <div className='animate-spin rounded-full h-4 w-4 border-b-2 border-blue-500'></div>
          </div>
        )}
      </div>

      {/* Spell check suggestion - only show if enabled and not compact */}
      {!compact && showSpellCheck && spellCheck && spellCheck.isLikelyMisspelled && (
        <div className='mt-2 p-3 bg-blue-50 border border-blue-200 rounded-lg'>
          <div className='flex items-center gap-2 text-sm'>
            <CheckCircle className='h-4 w-4 text-blue-500' />
            <span className='text-blue-700'>
              {t('Search.Did you mean')}:{' '}
              <button
                onClick={handleSpellCorrection}
                className='font-semibold text-blue-600 hover:text-blue-800 underline'
              >
                {spellCheck.correctedQuery}
              </button>
              ?
            </span>
          </div>        </div>
      )}

      {/* Suggestions dropdown */}
      {showSuggestions && suggestions.length > 0 && (() => {
        const dropdownContent = (
          <div
            ref={suggestionsRef}
            className={`bg-white border border-gray-200 shadow-lg max-h-64 overflow-y-auto ${
              compact ? 'rounded-md' : 'rounded-xl'
            }`}
            style={
              compact && isMounted
                ? {
                    position: 'fixed',
                    top: dropdownPosition.top,
                    left: dropdownPosition.left,
                    width: dropdownPosition.width,
                    zIndex: 9999,
                  }
                : {}
            }
          >
            <div className='py-2'>
              <div className='px-4 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider'>
                {t('Search.Suggestions')}
              </div>
              {suggestions.map((suggestion, index) => (
                <button
                  key={suggestion}
                  onClick={() => handleSuggestionClick(suggestion)}
                  className={`w-full text-left px-4 py-3 hover:bg-gray-50 transition-colors ${
                    index === selectedIndex
                      ? 'bg-blue-50 border-r-2 border-blue-500'
                      : ''
                  }`}
                >
                  <div className='flex items-center gap-2'>
                    <Search className='h-4 w-4 text-gray-400' />
                    <span className='text-gray-900'>{suggestion}</span>
                  </div>
                </button>
              ))}
            </div>
          </div>
        )

        // Use portal for compact mode to render outside header stacking context
        if (compact && isMounted && typeof document !== 'undefined') {
          return createPortal(dropdownContent, document.body)
        }

        // Regular absolute positioning for non-compact mode
        return (
          <div className={`absolute top-full left-0 right-0 mt-1 z-50`}>
            {dropdownContent}
          </div>
        )
      })()}
          <div className='py-2'>
            <div className='px-4 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider'>
              {t('Search.Suggestions')}
            </div>
            {suggestions.map((suggestion, index) => (
              <button
                key={suggestion}
                onClick={() => handleSuggestionClick(suggestion)}
                className={`w-full text-left px-4 py-3 hover:bg-gray-50 transition-colors ${
                  index === selectedIndex
                    ? 'bg-blue-50 border-r-2 border-blue-500'
                    : ''
                }`}
              >
                <div className='flex items-center gap-2'>
                  <Search className='h-4 w-4 text-gray-400' />
                  <span className='text-gray-900'>{suggestion}</span>
                </div>
              </button>
            ))}
          </div>
        </div>
      )}

      {/* Search hints - only show on search page (not compact) */}
      {!compact && query.length === 0 && (
        <div className='mt-3 flex flex-wrap gap-2'>
          <span className='text-sm text-gray-500'>{t('Search.Popular')}:</span>
          {['shoes', 'shirt', 'jeans', 'watch'].map((hint) => (
            <Badge
              key={hint}
              variant='secondary'
              className='cursor-pointer hover:bg-gray-200'
              onClick={() => handleSuggestionClick(hint)}
            >
              {hint}
            </Badge>
          ))}
        </div>
      )}
    </div>
  )
}
